<Window x:Class="Compete.Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Compete.Updater"
        mc:Ignorable="d"
        Title="{DynamicResource Updater.WindowTitle}" Height="200" Width="800" WindowStartupLocation="CenterScreen" Icon="/Assets/Images/Update.png">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,22,0,0" TextWrapping="Wrap" Text="{DynamicResource Updater.DownloadProgress}" VerticalAlignment="Top"/>
        <ProgressBar Height="16" Margin="70,22,10,0" VerticalAlignment="Top" Maximum="{Binding FileCount}" Value="{Binding DownloadProgress}"/>
        <TextBlock HorizontalAlignment="Left" Margin="70,43,0,0" TextWrapping="Wrap" Text="{Binding DownloadPrompt}" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,63,0,0" TextWrapping="Wrap" Text="{DynamicResource Updater.CopyProgress}" VerticalAlignment="Top"/>
        <ProgressBar Height="16" Margin="70,63,10,0" VerticalAlignment="Top" Maximum="{Binding FileCount}" Value="{Binding CopyProgress}"/>
        <TextBlock HorizontalAlignment="Left" Margin="70,85,0,0" TextWrapping="Wrap" Text="{Binding CopyPrompt}" VerticalAlignment="Top"/>
        <Button Content="{DynamicResource Updater.StartUpdate}" HorizontalAlignment="Center" Margin="0,109,0,0" VerticalAlignment="Top" Width="75" IsDefault="True" Command="{Binding UpdateCommand}"/>
    </Grid>
</Window>
